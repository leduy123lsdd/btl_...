<% include partials/head %>

<div class="container">

	<div class="row">
		<div class="col-sm-1 col-md-3 col-lg-3"></div>
		<div class="col-sm-10 col-md-6 col-lg-6">

			<!-- input infomation area -->
			<div class="d-flex justify-content-center"><img src="/motivation.png" alt=""></div><br>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="User name" name="username" id="user">
			</div>
			<div class="form-group">
				<input class="form-control" type="password" placeholder="Password" name="password" id="password">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" id="submit_btn">Đăng nhập</button>
			</div>
			<div>
				<p>Chưa có tài khoản?<a href="/home" style="color: blue;">Đăng kí</a></p>
			</div>
			<!-- input infomation area -->

		</div>
		<div class="col-sm-1 col-md-3 col-lg-3"></div>

	</div>
	<div id="parse_ajax_data_here">

	</div>
</div>

<script>
	var userName = $('#user');
	var passWord = $('#password');
	var pra_ajax = $('#parse_ajax_data_here');

	$('#submit_btn').on('click', function () {

		// getView();

		if (userName.val() == "") {
			alert("Bạn chưa nhập tài khoản");
			return
		}
		if (passWord.val() == "") {
			alert("Bạn chưa nhập mật khẩu");
			return
		}

		$.ajax({
			url: '/signin/' + userName.val() + '/' + passWord.val(),
			type: 'GET',
			dataType: 'json',
			success: (data) => {
				// pra_ajax.html('all users:' + data);
				if (data.status == 0) {
					alert("Bạn đã nhập sai tài khoản hoặc mật khẩu :)");
					userName.val("");
					passWord.val("");
				}
			}
		});

	})

</script>

