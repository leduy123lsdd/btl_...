<!-- item card  -->
<div class="container">

    <div class="row">
        <%data.forEach(function(item){%>
        <div class="col-sm-12 col-md-6 col-lg-4 ">
            <div class="card" style="width: 100%; box-shadow: 1px 1px #B0B1B3;">

                <img src="<%= item.image[0] %>" class="card-img-top" alt="">
                <div class="card-body">
                    <p style="color: red; font-size: 14px;">Giá: <%= (item.price).toFixed(1).replace(/\d(?=(\d{3})+\.)/g, '$&.') %> đ/tháng</p>
                    <h6 class="card-title display-5"><%= item.title %></h6>
                    <p class="card-text">Địa chỉ: <%= item.address %></p>
                    <a style="color: white;" id="detail" onclick="click_detail()" class="btn btn-primary">Chi tiết</a>
                </div>
            </div>
            
        </div>
        <%});%>
        


    </div>


</div>

<script>
    function click_detail(){
        alert("Bạn phải đăng nhập mới có thể xem chi tiết !");
